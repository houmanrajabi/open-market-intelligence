{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Current File (Dynamic)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}